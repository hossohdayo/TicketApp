<h1>ログイン</h1>
<p style="color: Red"><%= @error %></p>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag action: :auth do %>
    <div class="field">
      <%= label_tag :name, 'ユーザー名' %>
      <%= text_field_tag :name, '', size: 20, class: 'form-control' %>
    </div>
    <div class="field">
      <%= label_tag :password, 'パスワード' %>
      <%= password_field_tag :password, '', size: 20, class: 'form-control' %>
    </div>
    <%= hidden_field_tag :referer, flash[:referer] %>
    <%= submit_tag 'ログイン', class: "btn btn-primary" %>
    <% end %>
    <p>新規登録は<%= link_to("コチラ", "/user/new") %></p>
  </div>
</div>
